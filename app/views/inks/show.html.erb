<div class="full">
  <h2><%= @ink.title %></h2>
  <% if @ink.author == current_author %><%= link_to 'Edit', edit_ink_path(@ink) %>
      <br/>
  <% end %>
</div>

<div class="main">
  <div class="text">
    <%= @ink.text.present? ? strip_tags(@ink.text).gsub("\n", "<br />").html_safe : "(this ink has no text)" %>
  </div>

  <div class="comments_block">
      <h3>Comments</h3>
      <div>
        <% if @ink.comments.empty? %>
            No comments.
        <% else %>
            <% @ink.comments.each do |comment| %>

              <div class="comment_block">
                <img class="author_thumbnail_small" />
                <div class="comment_content">
                  <b><%= link_to comment.author.alias, comment.author %></b>
                  <% if @ink.author == current_author %><%= link_to "(remove)", comment_path(comment), :method => "delete", :confirm => "Really remove this comment?" %><% end %>
                  <br/>
                  <%= comment.text %>
                </div>
              </div>
            <% end %>
        <% end %>
        <%= form_for(Comment.new) do |f| %>
            <%= hidden_field_tag :ink_id, @ink.id %>
          <div class="comment_block">
            <img class="author_thumbnail_small" />
            <div class="comment_content">
            <% if author_signed_in? %>
                <%= f.text_area :text %>
                <%= f.submit ("Comment") %>
            <% else %>
                <%= f.text_area :text %>
                <%= f.submit ("Comment") %>
            <% end %>
            </div>
          </div>

        <% end %>
      </div>
  </div>
</div>

<div class="right-bar">
  <div class="author_blurb">
    <img class="author_thumbnail" style="float: left; margin-right: 6px; margin-bottom: 2px;"/>
    <div style="display: inline; vertical-align: top;">
      <b><%= link_to @ink.author.alias, @ink.author %></b><br/>
      <%= truncate(@ink.author.autobiography, :length => 170) %>
    </div>
  </div>

  <h3 class="tags">Tags</h3>

  <div>
    asd fjsadk flj dskadkf jjakef jkdsfe
  </div>

  <h3 class="more">More</h3>

  <div>
    asasdjfklasd jfklasdj fkladjsfk
  </div>
</div>
