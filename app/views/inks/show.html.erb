<div class="full">
  <h2><%= @ink.title %></h2>
  <% if @ink.author == current_author %><%= link_to 'Edit', edit_ink_path(@ink) %>
      <br/>
  <% end %>
</div>

<div class="main">
  <div class="text">
    <%= @ink.text.present? ? strip_tags(@ink.text).gsub("\n", "<br />").html_safe : "(this ink has no text)" %>
  </div>
</div>

<div class="right-bar">
  <div class="author_blurb">
    <img class="author_thumbnail" style="float: left; margin-right: 6px; margin-bottom: 2px;"/>
    <div style="display: inline; vertical-align: top;">
      <b><%= link_to @ink.author.alias, @ink.author %></b><br/>
      <%= truncate(@ink.author.autobiography, :length => 170) %>
    </div>
  </div>

  <h3 class="tags">Tags</h3>

  <div>
    asd fjsadk flj dskadkf jjakef jkdsfe
  </div>

  <h3 class="more">More</h3>

  <div>
    asasdjfklasd jfklasdj fkladjsfk
  </div>
</div>
