<!DOCTYPE html>
<html>
    <head>
      <title>InkSling</title>

      <link rel="shortcut icon" href="/favicon.ico" />

      <%= stylesheet_link_tag 'compiled/screen.css', :media => 'screen, projection' %>
      <%= stylesheet_link_tag 'compiled/print.css', :media => 'print' %>
      <!--[if IE]><%= stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection' %><![endif]-->
      <%= content_for(:stylesheets) %>

      <%= javascript_include_tag 'jquery.js' %>
      <%= javascript_include_tag 'rails.js' %>
      <%= javascript_include_tag 'application.js' %>
      <%= content_for(:javascripts) %>

      <%= csrf_meta_tag %>
    </head>
    <body class="<%= controller.controller_path.gsub("/", " ") %> <%= controller.controller_name %> <%= controller.action_name %>">
        <% if notice.present? or alert.present? %>
            <div id="notice-wrapper">
              <div id="notice">
                <div><%= notice %></div>
                <div><%= alert %></div>
              </div>
            </div>
            <script>
              $(function() {
                  $('#notice').click(function() {
                      $('#notice-wrapper').fadeOut();
                  });
                  setTimeout(function() {$('#notice-wrapper').fadeOut()}, 5000);
              });
            </script>
        <% end %>

        <div id="header">
            <div class="container">
              <div class="left">
                <a href="/" id="logo">
                  <img alt="InkSling" src="/images/logo_white.png" />
                </a>
                <ul id="site_nav">
                    <li>
                      <a href="#">Library</a>
                    </li>
                    <li>
                      <a href="#">Trending</a>
                    </li>
                    <li>
                      <a href="#">Random</a>
                    </li>
                </ul>
              </div>
              <div class="right">
                <% if author_signed_in? %>
                    <a href="<%= destroy_author_session_path %>" id="user_nav"><span class="weak">Sign out</span></a>
                    <a href="<%= dashboard_index_path %>" id="user_nav"><span class="weak"><%= current_author.email %></span></a>
                <% else %>
                    <a href="<%= authenticate_path %>" id="user_nav">
                      Log in <span class="weak">or</span> Sign up
                    </a>
                <% end %>
              </div>
            </div>
        </div>

        <div id="content">
            <%= yield %>
        </div>

        <div id="footer">
          <div class="container">
            <ul>
                <li><a href="/about">About</a></li>
                <li><a href="/team">Team</a></li>
                <li><a href="/jobs">Jobs</a></li>
                <li><a href="/press">Press</a></li>
                <li><a href="/privacy">Privacy</a></li>
                <li><a href="/terms">Terms</a></li>
            </ul>
           </div>
        </div>
    </body>
</html>
